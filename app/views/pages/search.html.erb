      <div class="ssection-2">
        <div class="row px-5">
          <div class="col-12">
            <h5 class="h4 my-3 text-red text-center" id="search">
              Search Results Found <%= pluralize(@properties.size, 'House') %> 
            </h5>
          </div>
          <% @properties.each do |property| %>
            <div class="col-lg-4 col-md-6 col-12">
              <div class="card border-0">
                <%= link_to property_path(property) do %>
                  <%= image_tag property.image[0], class: 'card-img-top' %>
                <% end %>
                <div class="card-body">
                  <div class="bottom d-flex justify-content-between">
                    <div class="left d-flex flex-column">
                      <small class="text-muted"> <%= property.neighborhood %> </small>
                      <p class="font-weight-bold"> <%= property.city %> </p>
                    </div>
                    <% @property = property %>
                    <div class="right d-flex align-self-center" id='likes-search'>
                      <%= render 'pages/likes', :locals => { property: @property } %>

                    </div>
                  </div>
                </div>
              </div>
            <% end %>
        </div>
      </div>
