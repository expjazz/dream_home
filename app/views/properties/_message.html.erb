<div class="d-none message-form positio-relative" id="message-form">
<div class="close position-absolute close-button" id='close-button'>x</div>
<%= form_with(scope: @property.inbox_messages.new, url: property_inbox_messages_path(@property), method: :post, local: true) do |f| %>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"> Send a message to the owner </h5>
    <div class="form-group">
      <%= f.text_area :body, size: '10x10', class: 'form-control'%>
    </div>
    <%= f.hidden_field :property_id, value: @property.id %>
    <%= f.hidden_field :receiver_id, value: @property.user.id %>

    <%= f.submit 'Send a message', class: 'btn bg-primary btn-primary justify-self-center text-white' %>
  </div>
</div>
<% end %>
</div>