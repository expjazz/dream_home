<div class="container pt-5">
  <%  @properties.each do |property| %>
    <div class="card-container d-flex">
      <div id="carouselExampleControls" class="carousel slide w-75 overflow-hidden" data-ride="carousel">
        <% property.image.each do |image| %>
                  <% if image == property.image[0]%>
                  <div class="carousel-item active">
                    <%= image_tag image, class: 'd-block w-100'%>

                  </div>
                  <% else %>
                   <div class="carousel-item">
                    <%= image_tag image, class: 'd-block w-100'%>

                    </div>
                  <% end %>
        <% end %>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div class="card">
        <div class="card-header">
          Price: <%= property.price %> R$
        </div>
        <div class="card-body">
          <h5 class="card-title"> Neighborhood: <%= property.neighborhood%> </h5>
          <p class="card-text"> City: <%= property.city%> </p>
          <p class="card-text"> Meters: <%= property.square_meters%> </p>

          <%= link_to 'Check this offer', property_path(property), class: 'btn btn-primary'%>
        </div>
      </div>
    </div>
  <% end %>
</div>